  <extension
         point="org.eclipse.equinox.http.registry.httpcontexts">
      <httpcontext
            id="help">
         <resource-mapping
               path="/">
         </resource-mapping>
      </httpcontext>
   </extension>
   <extension
         point="org.eclipse.equinox.http.registry.resources">
      <resource
            alias="/advanced"
            base-name="/advanced"
            httpcontextId="help">
      </resource>
      <resource
            alias="/basic"
            base-name="/basic"
            httpcontextId="help">
      </resource>
      <serviceSelector
            filter="(other.info=org.eclipse.help)">
      </serviceSelector>
   </extension>
